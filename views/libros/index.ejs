<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Libros</title>
</head>
<body>
    <h1>Libros</h1>
    <form action="/libros" method="GET">
        <input type="text" name="search" placeholder="Buscar por título o autor">
        <button type="submit">Buscar</button>
    </form>
    <ul>
        <% libros.forEach((libro) => { %>
            <li>
                <%= libro.titulo %> - <%= libro.autor %> - $<%= libro.precio %>
                <a href="/libros/editar/<%= libro.id %>">Editar</a>
                <form action="/libros/eliminar/<%= libro.id %>" method="POST" style="display:inline;">
                    <button type="submit">Eliminar</button>
                </form>
            </li>
        <% }) %>
    </ul>
    <a href="/libros/nuevo">Añadir Nuevo Libro</a>
    <a href="/">Inicio</a>
</body>
</html>
